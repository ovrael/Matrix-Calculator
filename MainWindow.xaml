                        <TextBox x:Name="tbRowTwo" Height="19" Canvas.Left="260" TextWrapping="Wrap" Text="Row 2" Canvas.Top="154" Width="82" Background="{x:Null}" BorderBrush="Black" IsEnabled="False"/>
