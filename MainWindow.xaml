                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <Canvas HorizontalAlignment="Left" Height="604" Margin="194,120,0,0" VerticalAlignment="Top" Width="425" Background="#FFEE8B8B">
