                            <ImageBrush ImageSource="./Images/refresh.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock x:Name="tbRefresh" Canvas.Left="305" TextWrapping="Wrap" Text="Use refresh button to reset changes" Canvas.Top="55" Height="54" Width="110"/>
